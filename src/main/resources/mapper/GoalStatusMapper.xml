<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.widyu.healthcare.goals.GoalsStatusMapper">

    <insert id="insertGoalStatus" parameterType="com.widyu.healthcare.goals.model.GoalStatus">
        INSERT INTO goalsstatus (goalIdx, time) VALUES (#{goalIdx}, #{userIdx})
    </insert>

    <delete id="deleteGoalStatus" parameterType="java.lang.Long">
        DELETE
        FROM goalsstatus
        WHERE userIdx = #{userIdx} AND goalIdx = #{goalIdx}
    </delete>

    <select id="countGoalStatus" parameterType="java.lang.Long" resultType="int">
        SELECT COUNT(*)
        FROM goalsstatus
        WHERE userIdx = #{userIdx} AND goalIdx = #{goalIdx}
    </select>

</mapper>
